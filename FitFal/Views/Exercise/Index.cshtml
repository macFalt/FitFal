@model FitFalMVC.Application.ViewModels.ExerciseVmDirector.ListExerciseForListVm

@{
    ViewBag.Title = "Atlas ćwiczeń";
    Layout = "_Layout";
}

<h1>Atlas ćwiczeń</h1>

<form asp-action="Index" asp-controller="Exercise" method="get">
    <div class="row">
        <input type="text" asp-for="SearchString" name="searchString" id="searchString" value="@Model.SearchString" />
        <input type="submit" value="Wyszukaj"/>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exercise in Model.ExerciseForListVms)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelExercise => exercise.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Szczegóły", "Details", new { id = exercise.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <ul class="pagination">
            @for (int i = 1; i <= Math.Ceiling(Model.Count / (double)Model.PageSize); i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNo="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-searchString="@Model.SearchString">@i</a>
                </li>
            }
        </ul>
    </div>
</form>





