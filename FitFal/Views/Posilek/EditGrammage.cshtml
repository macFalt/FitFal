@model FitFalMVC.Application.ViewModels.Meal2VmDirector.NewProductInMealVm

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGrammage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="ProductId" value="@Model.ProductId"/>
            <input type="hidden" name="MealId" value="@Model.MealId"/>
            <input type="hidden" name="Id" value="@Model.Id"/>

            <div class="form-group">
                <label asp-for="Grammage" class="control-label">Gram</label>
                <input asp-for="Grammage" class="form-control"/>
                <span asp-validation-for="Grammage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>

</div>