@model FitFalMVC.Application.ViewModels.WorkoutVmDirector.NewWorkoutExerciseVm

@{
    ViewBag.Title = "Dodaj ćwiczenie";
    Layout = "_Layout";
}

<h2>Dodaj ćwiczenie</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddExerciseToWorkout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" name="WorkoutId" value="@Model.WorkoutId" />

            <select id="exerciseList" name="ExerciseId">
                <option value="">Wybierz ćwiczenie</option>
                @foreach (var exercise in Model.Exercises)
                {
                    <option value="@exercise.Id">@exercise.Name</option>
                }
            </select>
            
            <div class="form-group">
                <label asp-for="Sets" class="control-label">Ilość serii</label>
                <input asp-for="Sets" class="form-control"/>
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reps" class="control-label">Ilość powtórzeń</label>
                <input asp-for="Reps" class="form-control"/>
                <span asp-validation-for="Reps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Cieżar</label>
                <input asp-for="Weight" class="form-control"/>
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary"/>
            </div>
        </form>
    </div>

</div>